<Window x:Class="HotelManagement.EditUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" Height="396" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Логин:" Grid.Row="0"/>
        <TextBox Name="UsernameTextBox" Grid.Row="1" Margin="0,0,0,10"/>

        <Label Content="Пароль:" Grid.Row="2"/>
        <PasswordBox Name="PasswordBox" Grid.Row="3" Margin="0,0,0,10"/>

        <Label Content="ФИО:" Grid.Row="4"/>
        <TextBox Name="FullNameTextBox" Grid.Row="5" Margin="0,0,0,10"/>

        <Label Content="Email:" Grid.Row="5" Margin="0,22,0,6" Grid.RowSpan="2"/>
        <TextBox Name="EmailTextBox" Grid.Row="6" Margin="0,15,0,49" VerticalAlignment="Top"/>

        <Label Content="Телефон:" Grid.Row="6" Margin="0,28,0,18"/>
        <TextBox Name="PhoneTextBox" Grid.Row="6" Margin="0,50,0,6" VerticalAlignment="Top"/>

        <CheckBox Name="IsAdminCheckBox" Content="Администратор" Grid.Row="7" Margin="0,3,0,-9"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="11">
            <Button Content="OK" IsDefault="True" Width="80" Margin="0,0,10,0" Click="OKButton_Click"/>
            <Button Content="Отмена" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>