<Window x:Class="HotelManagement.EditBookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование бронирования" Height="404" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Номер комнаты:" Grid.Row="0"/>
        <ComboBox Name="RoomComboBox" Grid.Row="1" Margin="0,0,0,10"
                 DisplayMemberPath="RoomNumber"/>

        <Label Content="Гость:" Grid.Row="2"/>
        <ComboBox Name="UserComboBox" Grid.Row="3" Margin="0,0,0,10"
                 DisplayMemberPath="FullName"/>

        <Label Content="Дата заезда:" Grid.Row="4"/>
        <DatePicker Name="CheckInDatePicker" Grid.Row="4" HorizontalAlignment="Center" Margin="0,0,20,0"/>

        <Label Content="Дата выезда:" Grid.Row="6"/>
        <DatePicker Name="CheckOutDatePicker" Grid.Row="6" Margin="0,5,20,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Content="Стоимость:" Grid.Row="6" Margin="0,101,0,25"/>
        <TextBox Name="TotalPriceTextBox" Grid.Row="6" Margin="0,127,0,1" IsReadOnly="True" VerticalAlignment="Top"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="10">
            <Button Content="Рассчитать" Click="CalculatePrice_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="OK" IsDefault="True" Width="80" Margin="0,0,10,0" Click="OKButton_Click"/>
            <Button Content="Отмена" IsCancel="True" Width="80"/>
        </StackPanel>
    </Grid>
</Window>