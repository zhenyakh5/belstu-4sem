<Window x:Class="HotelManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:HotelManagement"
        Title="Управление гостиницей" Height="600" Width="900">
    <Grid>
        <TabControl>
            <TabItem Header="Пользователи">
                <views:UsersView x:Name="UsersViewControl"/>
            </TabItem>
            <TabItem Header="Номера">
                <views:RoomsView x:Name="RoomsViewControl"/>
            </TabItem>
            <TabItem Header="Бронирования">
                <views:BookingsView x:Name="BookingsViewControl"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>