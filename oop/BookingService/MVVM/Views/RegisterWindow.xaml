<Window x:Class="BookingService.MVVM.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingService.MVVM.Views"
        mc:Ignorable="d"
        Title="{DynamicResource RegisterWindowTitle}" 
        Height="500" 
        Width="400" 
        Background="{DynamicResource SecondaryBrush}"
        Cursor="{StaticResource NormalCursor}"
        WindowStartupLocation="CenterScreen"
        Icon="D:\4sem\oop\BookingService\Resources\icon.ico">

    <Grid>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Orientation="Vertical" 
                    Margin="0,20,0,0">

            <Label Content="{DynamicResource RegisterHeader}" 
                   Style="{DynamicResource HeaderLabel}"/>

            <Label Content="{DynamicResource UsernameLabel}" Style="{DynamicResource FormLabel}"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     Style="{DynamicResource {x:Type TextBox}}"/>

            <Label Content="{DynamicResource PasswordLabel}" Style="{DynamicResource FormLabel}"/>
            <PasswordBox x:Name="PasswordBox" 
                         Style="{DynamicResource {x:Type PasswordBox}}"/>

            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Margin="0,50,0,0">

                <Button Content="{DynamicResource RegisterSubmitButton}" 
                        Style="{DynamicResource PrimaryButton}" 
                        Command="{Binding RegisterCommand}"/>

                <Button Content="{DynamicResource CancelButton}" 
                        Style="{DynamicResource SecondaryButton}" 
                        Command="{Binding CancelCommand}"
                        Margin="30,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>