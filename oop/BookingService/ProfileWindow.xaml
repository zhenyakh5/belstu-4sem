<Window x:Class="BookingService.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingService"
        mc:Ignorable="d"
        Title="Личный кабинет" 
        Height="360" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SecondaryBrush}">

    <Grid Margin="20">
        <StackPanel>
            <Label Content="{DynamicResource ProfileHeader}" Style="{DynamicResource HeaderLabel}"/>

            <TextBlock Text="{DynamicResource UsernameLabel}" Style="{DynamicResource FormLabelText}"/>
            <TextBox x:Name="UsernameTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

            <Button Content="{DynamicResource SaveButton}" Style="{DynamicResource PrimaryButton}" FontSize="16" 
                    Margin="0,15,0,0" Command="{x:Static local:ProfileWindow.SaveCommand}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,39,0,0">
                <Button Content="{DynamicResource LanguageLabel}" 
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="16" Margin="0,0,40,0"
                        Command="{x:Static local:ProfileWindow.LanguageChange}"/>

                <Button Content="{DynamicResource ThemeLabel}" 
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="16" Margin="0,0,0,0"
                        Command="{x:Static local:ProfileWindow.ThemeChange}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>