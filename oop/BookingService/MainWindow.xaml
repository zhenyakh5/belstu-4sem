<Window x:Class="BookingService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingService"
        mc:Ignorable="d"
        Title="{DynamicResource MainWindowTitle}"
        Width="1440"
        Height="1024"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SecondaryBrush}"
        Cursor="{StaticResource NormalCursor}"
        Icon="D:\4sem\oop\BookingService\Resources\icon.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource PrimaryBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                <Button x:Name="ProfileWindow" Content="{DynamicResource ProfileHeader}" 
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="16" Margin="0,0,10,0"
                        Command="{x:Static local:MainWindow.ProfileCommand}"/>

                <Button x:Name="AdminPanelButton" Content="{DynamicResource AdminPanelButton}"
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="16"
                        Command="{x:Static local:MainWindow.AdminPanelCommand}" Margin="0,0,10,0"/>

                <Button x:Name="RefreshButton" Content="{DynamicResource RefreshButton}" 
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="16" Margin="0,0,10,0"
                        Command="{x:Static local:MainWindow.RefreshInfo}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="{DynamicResource SearchLabel}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBox FontSize="16" x:Name="SearchBox" Width="250" Height="30" 
                         Style="{DynamicResource {x:Type TextBox}}"
                         TextChanged="SearchBox_TextChanged" MinWidth="200"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5">
                <Label Content="{DynamicResource SortLabel}" FontSize="18" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="AlphabetSort" Content="{DynamicResource AlphabetSortButton}" 
                            Style="{DynamicResource SecondaryButton}"
                            FontSize="16" Margin="0,0,5,0"
                            Command="{x:Static local:MainWindow.AlphabetSortCommand}"/>
                    <Button x:Name="CostAscSort" Content="{DynamicResource CostAscSortButton}" 
                            Style="{DynamicResource SecondaryButton}"
                            FontSize="16" Margin="0,0,5,0"
                            Command="{x:Static local:MainWindow.CostAscSortCommand}"/>
                    <Button x:Name="CostDiscSort" Content="{DynamicResource CostDescSortButton}" 
                            Style="{DynamicResource SecondaryButton}"
                            FontSize="16"
                            Command="{x:Static local:MainWindow.CostDescSortCommand}"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="10" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding Rooms}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource RoomCardStyle}">
                            <StackPanel>
                                <Image Source="{Binding ImagePath}" Width="280" Height="180" Stretch="UniformToFill"/>
                                <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding ShortDescription}" FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding FullDescription}" FontSize="14" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding Category}" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Rating, StringFormat={}★{0:F1}}" FontSize="14" Margin="10,0,0,0" Foreground="#FFD68910"/>
                                </StackPanel>

                                <TextBlock FontSize="14" Margin="0,5,0,0">
                            <Run Text="{DynamicResource PriceLabel}"/>
                            <Run Text="{Binding Price, StringFormat=' {0:C}'}"/>
                            <Run Text="/"/>
                            <Run Text="{DynamicResource NightLabel}"/>
                                </TextBlock>

                                <TextBlock FontSize="14">
                            <Run Text="{DynamicResource BedsLabel}"/>
                            <Run Text="{Binding NumberOfBeds}"/>
                                </TextBlock>

                                <TextBlock Text="{Binding Amenities}" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0" FontStyle="Italic"/>

                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{DynamicResource BalconyLabel}" FontSize="12"/>
                                    <TextBlock Text="{Binding HasBalcony}" FontSize="12" FontWeight="Bold"/>
                                    <TextBlock Text="{DynamicResource SeparatorLabel}" FontSize="12" Margin="5,0,0,0"/>
                                    <TextBlock Text="{DynamicResource NonSmokingLabel}" FontSize="12"/>
                                    <TextBlock Text="{Binding IsNonSmoking}" FontSize="12" FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>