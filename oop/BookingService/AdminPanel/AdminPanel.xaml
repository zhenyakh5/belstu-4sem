<Window x:Class="BookingService.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingService"
        mc:Ignorable="d"
        Title="{DynamicResource AdminPanelTitle}"
        Height="483"
        Width="517"
        Background="{DynamicResource SecondaryBrush}"
        WindowStartupLocation="CenterScreen"
        Cursor="{StaticResource NormalCursor}"
        Icon="D:\4sem\oop\BookingService\Resources\icon.ico">

    <Grid>
        <Label Content="{DynamicResource AdminPanelHeader}" Style="{DynamicResource HeaderLabel}"/>

        <StackPanel Orientation="Vertical"
                   Margin="0,40,0,0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">

            <Button Content="{DynamicResource AddRoomButton}"
                    Style="{DynamicResource PrimaryButton}"
                    Command="{x:Static local:AdminPanel.AddRoomCommand}"/>

            <Button Content="{DynamicResource EditRoomButton}"
                    Style="{DynamicResource PrimaryButton}"
                    Command="{x:Static local:AdminPanel.EditRoomCommand}"
                    Margin="0,20,0,0"/>

            <Button Content="{DynamicResource DeleteRoomButton}"
                    Style="{DynamicResource PrimaryButton}"
                    Command="{x:Static local:AdminPanel.DeleteRoomCommand}"
                    Margin="0,20,0,0"/>

            <Button Content="Отменить действие"
                    Style="{DynamicResource PrimaryButton}"
                    Command="{x:Static local:AdminPanel.UndoCommand}"
                    Margin="0,20,0,0"/>

            <Button Content="Вернуть действие"
                    Style="{DynamicResource PrimaryButton}"
                    Command="{x:Static local:AdminPanel.RedoCommand}"
                    Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
