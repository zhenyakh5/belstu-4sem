<Window x:Class="BookingService.AddRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingService"
        mc:Ignorable="d"
        Title="{DynamicResource AddRoomTitle}" 
        Height="700" 
        Width="850"
        MinWidth="700"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SecondaryBrush}"
        Cursor="{StaticResource NormalCursor}"
        Icon="D:\4sem\oop\BookingService\Resources\icon.ico">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource NameLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="NameTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource ShortDescriptionLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="ShortDescriptionTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource FullDescriptionLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="FullDescriptionTextBox" 
                         Style="{DynamicResource {x:Type TextBox}}"
                         AcceptsReturn="True" TextWrapping="Wrap" Height="60" VerticalScrollBarVisibility="Auto"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource CategoryLabel}" Style="{DynamicResource FormLabelText}"/>
                <ComboBox Grid.Row="3" Grid.Column="1" x:Name="CategoryComboBox" Style="{DynamicResource {x:Type ComboBox}}">
                    <ComboBoxItem Content="Стандарт"/>
                    <ComboBoxItem Content="Люкс"/>
                    <ComboBoxItem Content="Делюкс"/>
                    <ComboBoxItem Content="Президентский"/>
                </ComboBox>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource RatingLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="RatingTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="{DynamicResource PriceLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="PriceTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="{DynamicResource BedsLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="NumberOfBedsTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="{DynamicResource StarsLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="StarsTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="{DynamicResource AmenitiesLabel}" Style="{DynamicResource FormLabelText}"/>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="AmenitiesTextBox" Style="{DynamicResource {x:Type TextBox}}"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="{DynamicResource BalconyLabel}" Style="{DynamicResource FormLabelText}"/>
                <CheckBox Grid.Row="9" Grid.Column="1" x:Name="HasBalconyCheckBox" Style="{DynamicResource {x:Type CheckBox}}" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="10" Grid.Column="0" Text="{DynamicResource NonSmokingLabel}" Style="{DynamicResource FormLabelText}"/>
                <CheckBox Grid.Row="10" Grid.Column="1" x:Name="IsNonSmokingCheckBox" Style="{DynamicResource {x:Type CheckBox}}" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="11" Grid.Column="0" Text="{DynamicResource ImagePathLabel}" Style="{DynamicResource FormLabelText}"/>
                <Grid Grid.Row="11" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0" x:Name="ImagePathTextBox" 
                             Style="{DynamicResource {x:Type TextBox}}"
                             TextChanged="ImagePathTextBox_TextChanged"/>
                    <Button Grid.Row="11" Grid.Column="1" Content="{DynamicResource BrowseButton}" 
                        Style="{DynamicResource PrimaryButton}"
                        Command="{x:Static local:AddRoom.BrowseCommand}" Margin="5,0,0,0" VerticalAlignment="Center"/>

                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                            BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,0"
                            HorizontalAlignment="Left">
                        <Image x:Name="ImagePreview" Width="200" Height="150" Stretch="Uniform"/>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{DynamicResource AddButton}" 
                    Style="{DynamicResource PrimaryButton}"
                    Command="{x:Static local:AddRoom.AddRoomCommand}" FontSize="16"/>
            <Button Content="{DynamicResource CancelButton}" 
                    Style="{DynamicResource SecondaryButton}"
                    Command="{x:Static local:AddRoom.CancelCommand}" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>