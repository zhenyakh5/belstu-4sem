<Window x:Class="BookingService.DeleteRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookingService"
        mc:Ignorable="d"
        Title="{DynamicResource DeleteRoomTitle}" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SecondaryBrush}"
        Cursor="{StaticResource NormalCursor}"
        Icon="D:\4sem\oop\BookingService\Resources\icon.ico">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBox x:Name="SearchTextBox" Width="300" 
                     Style="{DynamicResource {x:Type TextBox}}"
                     TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="{DynamicResource SearchButton}" Style="{DynamicResource PrimaryButton}" 
                    Command="{x:Static local:DeleteRoom.SearchCommand}" Margin="5,0,0,0"/>
        </StackPanel>

        <Popup x:Name="SearchPopup" PlacementTarget="{Binding ElementName=SearchTextBox}" 
               StaysOpen="False" IsOpen="False" Width="{Binding ActualWidth, ElementName=SearchTextBox}">
            <ListBox x:Name="SearchResultsListBox" MaxHeight="200" 
                     SelectionChanged="SearchResultsListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding ShortDescription}" FontSize="12" TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Popup>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10" 
                Visibility="Collapsed" x:Name="RoomInfoBorder" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="{DynamicResource SelectedRoomLabel}" FontWeight="Bold" FontSize="16"/>
                <TextBlock x:Name="SelectedRoomName" FontSize="14" Margin="0,5,0,0"/>
                <TextBlock x:Name="SelectedRoomDescription" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{DynamicResource DeleteButton}" Style="{DynamicResource PrimaryButton}" 
                    Command="{x:Static local:DeleteRoom.DeleteCommand}" FontSize="16" Visibility="Collapsed" x:Name="DeleteButton"/>
            <Button Content="{DynamicResource CancelButton}" Style="{DynamicResource SecondaryButton}" 
                    Command="{x:Static local:DeleteRoom.CancelCommand}" FontSize="16" Margin="5,0,0,0" x:Name="CancelButton"/>
        </StackPanel>
    </Grid>
</Window>